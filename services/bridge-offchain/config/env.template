SOURCE_LUCID_PROVIDER=https://cardano-preproduction.blockfrost.io/api/v0
SOURCE_LUCID_NETWORK=Preproduction
# Comma-separated list of addresses to watch for deposits
SOURCE_DEPOSIT_ADDRESSES=addr_test1qz2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj0vs2qd4a6gtmvpt4ks2sggz

