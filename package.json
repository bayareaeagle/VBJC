{
  "name": "vbjc-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Unified VISTA Bridge ecosystem repository",
  "scripts": {
    "install:web": "npm --prefix ./apps/vista-bridge install",
    "install:offchain": "npm --prefix ./services/bridge-offchain install",
    "install:diagrams": "npm --prefix ./docs/design-docs/generate-diagrams install",
    "install:all": "npm run install:web && npm run install:offchain && npm run install:diagrams",
    "dev:web": "npm --prefix ./apps/vista-bridge run dev",
    "dev:offchain": "npm --prefix ./services/bridge-offchain run dev",
    "build:web": "npm --prefix ./apps/vista-bridge run build",
    "build:offchain": "npm --prefix ./services/bridge-offchain run build",
    "build:all": "npm run build:web && npm run build:offchain"
  }
}
